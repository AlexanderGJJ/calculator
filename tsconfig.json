{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
//    "strictDomEventTypes": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node", "@types/jest", "@testing-library/jest-dom", "vite/client"]
  },
  "include": [
    "./src/**/*"
  ]
}
